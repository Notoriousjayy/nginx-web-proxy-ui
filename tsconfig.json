{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*":    ["src/layouts/*"],
      "@data/*":       ["src/data/*"],
      "@pages/*":      ["src/pages/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist"
  },

  "include": [
    "src/**/*",
    "src/svg.d.ts"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}
